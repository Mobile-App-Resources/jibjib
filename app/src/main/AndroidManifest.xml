<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.cdvost.jibjib">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/jibjib_logo_square_r"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/jibjib_logo_square_r"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Material.Light.NoActionBar.Fullscreen">
        <activity
            android:name=".presentation.view.MatchView"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.MatchBirdDetailView"
            android:screenOrientation="sensorPortrait"></activity>
        <activity
            android:name=".presentation.view.BirdListView"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".presentation.view.MatchResultView"
            android:screenOrientation="sensorPortrait" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>